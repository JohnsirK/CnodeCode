/**index.wxss**/
.container {
  height: 100%;
}
page {
  background: #f5f5f5;
  height: 100%
}
.list {
  padding-top: 30rpx;
}
.list .li {
  background: #fff;
  padding: 0rpx 20rpx 20rpx 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(195, 195, 195, .4);
}
.list .label {
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  margin-right: 10rpx; 
  border-radius: 4rpx;
}
.list .bg1 {
  background: #80bd01;
  color: #fff;
}
.list .bg2 {
  background: #0176bd;
  color: #fff;
}
.list .bg3 {
  background: #01bd9c;
  color: #fff;
}
.list .bg4 {
  background: #bd8d01;
  color: #fff;
}
.list .bg5 {
  background: #a9a6ab;
  color: #fff;
}
.list .timeNum .c1 {
  color: #80bd01 !important
}
.list .timeNum {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}
.list .timeNum .c1 {
  color: #80bd01 !important
}
.list .li .con {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}
.list .con .tilte {
  color: #333;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: calc(100% - 150rpx);
  align-items: center;
}
.list .con .text {
  color: #777;
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 36rpx;
}
.list .li .bot {
  display: flex;
  align-items: center;
  padding: 10rpx 0 0 0;
}
.list .bot .user {
  display: flex;
  align-items: center;
}
.list .uimg {
  width: 60rpx;
  margin-right: 10rpx;
  height: 60rpx;
  display: block;
  border-radius: 10rpx;
}
.list .bot .ctime {
  font-size: 24rpx;
  color: #888; 
}